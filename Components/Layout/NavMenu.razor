@inject IStringLocalizer<Resource> _localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@_localizer["Ourservices"]</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @_localizer["Home"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="student">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @_localizer["Students"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="FacultyStaff">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @_localizer["FacultyStaff"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Employees">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @_localizer["Employees"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Applicants">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @_localizer["Applicants"]
            </NavLink>
        </div>

    </nav>
</div>

